<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instructor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#E4E4E4">

        <Button
            android:id="@+id/btn_find"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#B1610B"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:text="Search by Driver Licence Number"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/signout_ins"
            android:layout_width="94dp"
            android:layout_height="86dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:backgroundTint="#E4E4E4"
            android:drawableTop="@drawable/ic_baseline_exit_to_app_24"
            android:text="Sign out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Hi %name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/sumdate_btn"
            android:layout_width="345dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#008496"
            android:drawableLeft="@drawable/ic_baseline_wb_sunny_24"
            android:text="SUMMARY BY DATE&#10;Display all your booking"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/book_btn4"
            app:layout_constraintTop_toBottomOf="@+id/book_btn4" />

        <Button
            android:id="@+id/btn_sumtime"
            android:layout_width="345dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#00509A"
            android:drawableLeft="@drawable/ic_baseline_watch_later_24"
            android:text="SUMMARY BY TIME&#10;DISPLAY ALL YOUR BOOKING"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/sumdate_btn"
            app:layout_constraintTop_toBottomOf="@+id/sumdate_btn" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Licence no. %licence"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txtName2"
            app:layout_constraintTop_toBottomOf="@+id/txtName2" />

        <Button
            android:id="@+id/book_btn4"
            android:layout_width="345dp"
            android:layout_height="90dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#569A00"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:text="SET UP AVAILABILITY&#10;Make your schedule"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="(Instructor)"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>